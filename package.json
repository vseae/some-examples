{
  "name": "hardhat-foundry-integration",
  "version": "1.0.0",
  "description": "solution integrating the Hardhat and Foundry frameworks",
  "scripts": {
    "n": "hardhat node --no-deploy",
    "build": "yarn rimraf build && hardhat compile",
    "build:ts": "yarn rimraf dist && tsc",
    "test": "forge test -vv",
    "test:watch": "forge test -vv --watch",
    "coverage": "hardhat coverage",
    "size": "hardhat size-contracts",
    "deploy": "hardhat deploy  --network",
    "deploy:verify": "hardhat deploy-verify  --network",
    "lint": "yarn lint:sol&&yarn lint:ts",
    "lint:ts": "eslint . --ext .ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "fmt": "yarn fmt:sol&&yarn fmt:ts",
    "fmt:sol": "prettier --write 'contracts/**/*.sol'",
    "fmt:ts": "prettier --write '**/*.ts'",
    "merge": "sol-merger \"./contracts/**/*.sol\" ./flat",
    "prepack": "yarn build",
    "prepare": "",
    "prepublish": "yarn build",
    "verify:goerli": "hardhat etherscan-verify --network goerli --license MIT --force-license",
    "verify:sepolia": "hardhat etherscan-verify --network sepolia --license MIT --force-license --api-url https://api-sepolia.etherscan.io/",
    "verify:fantomTest": "hardhat etherscan-verify --network fantomTest --license MIT --force-license --api-key",
    "verify:mumbai": "hardhat etherscan-verify --network mumbai --license MIT --force-license --api-key"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:vseae/hardhat-startup.git"
  },
  "keywords": [
    "hardhat",
    "startup",
    "solidity",
    "foundry"
  ],
  "author": "vseae",
  "license": "MIT",
  "//": "toolbox=>ethers,hardhat-ethers,mocha,chai,hardhat-chai-matchers,hardhat-network-helpers,hardhat-etherscan,hardhat-gas-reporter,solidity-coveragee,Typechain",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.13",
    "@shopify/eslint-plugin": "^42.0.1",
    "@types/yargs": "^15.0.10",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "dotenv": "^8.0.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-only-tests": "^2.4.0",
    "eslint-plugin-prettier": "^3.4.1",
    "ethers": "^5.7.2",
    "hardhat": "^2.11.0",
    "hardhat-abi-exporter": "^2.10.0",
    "hardhat-contract-sizer": "^2.6.1",
    "hardhat-deploy": "^0.11.13",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-storage-layout": "^0.1.6",
    "hardhat-tracer": "^1.1.0-rc.9",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "sol-merger": "^4.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "yargs": "^16.1.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.8.3"
  }
}
